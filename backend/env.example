# Mosaico Backend Configuration

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=europe-west1  # EU region

# Vertex AI
VERTEX_AI_MODEL=gemini-2.5-pro
VERTEX_AI_MODEL_FLASH=gemini-2.5-flash  # For output fixing

# Cloud Storage
GCS_BUCKET_PROMPTS=mosaico-prompts
GCS_BUCKET_EXAMPLES=mosaico-examples
GCS_BUCKET_IMAGES=mosaico-images  # For user-uploaded images

# Database (Phase 2)
DATABASE_URL=postgresql://user:password@localhost:5432/mosaico
# For Cloud SQL: postgresql://user:password@/dbname?host=/cloudsql/project:region:instance

# Authentication (Phase 2)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Google Sheets API (Phase 2)
GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/service-account.json

# API Configuration
API_TITLE=Mosaico API
API_VERSION=1.0.0
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_PER_SECOND=5
RATE_LIMIT_BURST=10

# CORS
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Authentication (Optional - for local dev with Service Account)
# Uncomment and set path to service account JSON key:
# GOOGLE_APPLICATION_CREDENTIALS=/Users/gvannucchi/mosaico-dev-key.json
